<%= form_for(@user, class: "form-group") do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username, class: 'form-control', :required => true %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, class: 'form-control', :required => true %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, class: 'form-control', :required => true %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, class: 'form-control', :required => true %>
  </div>
  <br>
  <div class="actions bottom-margin text-center">
    <%= f.submit value: "#{submit_text}", class: "btn btn-primary" %>
    <%= link_to 'Cancel', @user, class: "btn btn-primary" %>
  </div>
<% end %>

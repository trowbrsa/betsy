<%= form_for(:session_data, url: login_path, :html => {:class => "form-signin box-with-shadow"}) do |f| %>
<% if !flash.now[:danger].nil? %>
  <p class="alert alert-danger"><%= flash.now[:danger] %></p>
<% end %>
 <h2 class="form-signin-heading">Please sign in</h2>
 <%= f.label :username, class: "sr-only" %>
 <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
 <br>
 <%= f.label :password, class: "sr-only" %>
 <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
 <br>
 <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
 <% end %>
